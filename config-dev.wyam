            Title = (doc, ctx) => doc.String(Keys.GroupKey),
            RelativePath = (doc, ctx) => $"authors/{(doc.String(Keys.GroupKey)).NormalizeString()}.html",
            GroupDocumentsMetadataKey = BlogKeys.Posts,
            GroupKeyMetadataKey = "Author"
        }));

